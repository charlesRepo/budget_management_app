// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User model - stores authenticated users
model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  googleId  String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  expenses       Expense[]
  income         Income[]
  settings       Settings?
  accountCredits AccountCredit[]
}

// Expense model - stores all budget expenses
model Expense {
  id           String   @id @default(cuid())
  userId       String
  name         String
  category     String
  amount       Float
  accountType  String   // 'checking', 'credit_card', 'line_of_credit', 'student_line_of_credit'
  paymentType  String   // 'automatic' or 'manual'
  frequency    String   // 'monthly', 'quarterly', 'yearly', 'custom'
  activeMonths Int[]    // Array of months [1-12] when expense is active
  notes        String?
  isArchived   Boolean  @default(false)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([accountType])
  @@index([category])
}

// Income model - tracks monthly income for both partners
model Income {
  id            String   @id @default(cuid())
  userId        String
  personName    String   // Selected from Settings (person1Name or person2Name)
  amount        Float
  month         String   // Format: YYYY-MM
  paymentPeriod String   // 'part1' or 'part2' for bi-weekly/semi-monthly tracking
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, personName, month, paymentPeriod])
  @@index([userId])
  @@index([month])
}

// Settings model - stores user preferences and configuration
model Settings {
  id                         String   @id @default(cuid())
  userId                     String   @unique
  splitRatioPerson1          Int      @default(50) // Percentage for person 1 (0-100)
  splitRatioPerson2          Int      @default(50) // Percentage for person 2 (0-100)
  autoCalculateSplitRatio    Boolean  @default(false) // If true, calculate split ratio from income amounts
  person1Name                String   @default("Person 1")
  person2Name                String   @default("Person 2")
  authorizedEmails           String[] // List of authorized email addresses
  checkingBalance            Float    @default(0) // Current balance in checking account
  creditCardBalance          Float    @default(0) // Current balance in credit card (negative = owe money)
  lineOfCreditBalance        Float    @default(0) // Current balance in line of credit (negative = owe money)
  studentLineOfCreditBalance Float    @default(0) // Current balance in student line of credit (negative = owe money)
  travelSavings              Float    @default(1000) // Monthly travel savings goal
  homeSavings                Float    @default(500) // Monthly home savings goal
  generalSavings             Float    @default(1000) // Monthly general savings goal
  createdAt                  DateTime @default(now())
  updatedAt                  DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// AccountCredit model - tracks money added TO accounts (government payments, tax refunds, etc.)
model AccountCredit {
  id          String   @id @default(cuid())
  userId      String
  description String   // Description of the credit (e.g., "Government payment", "Tax refund")
  amount      Float    // Amount added to the account (positive value)
  accountType String   // 'checking', 'credit_card', 'line_of_credit', 'student_line_of_credit'
  month       String   // Format: YYYY-MM
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([month])
  @@index([accountType])
}

